            	<Run Text="PAPASPYROS In VASSILIOS (Hagia Sophia 25 Nea Ionia)"/>
            	<LineBreak/>
            	<Run Text="(D. Volos, Magnesia) &#x9;&#x9;Tel. : 2421065291"/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="PARASKEVOPOULOS GEORGE (NEW ANHIALOS)"/>
