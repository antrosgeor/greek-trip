<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="My_App2.Thesaloniki.Thesalonikainterest"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:My_App2.Thesaloniki"
    xmlns:common="using:My_App2.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}" Background="#FF091E4B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="390*"/>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="592*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="123*"/>
            <RowDefinition Height="472*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.ColumnSpan="4" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='14' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
        </Grid>
        <TextBlock x:Name="pageTitle" Style="{StaticResource PageHeaderTextStyle}" Margin="66,0,30,0" FontFamily="Comic Sans MS" Grid.Column="1" Height="40" Grid.ColumnSpan="3">
        	<Run Text="Thessaloniki I"/>
        	<Run Text="nterest"/>
        </TextBlock>
        <ListView x:Name="listBox" HorizontalAlignment="Left" Height="552"  Grid.Row="3" VerticalAlignment="Top" Width="349" Background="{x:Null}" Grid.Column="1" Grid.RowSpan="2">
            <Button x:ConnectionId='1' x:Name="button1" Content="Aristotle Square" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='2' x:Name="button2" Content="White Tower" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='3' x:Name="button3" Content="St. Demetrius" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='4' x:Name="button4" Content="Kamara" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='5' x:Name="button5" Content="The Upper Town" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='6' x:Name="button6" Content="Square Navarino&#xD;&#xA;" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='7' x:Name="button7" Content=" Rotunda" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='8' x:Name="button8" Content="Archaeologi Museum" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='9' x:Name="button9" Content="Agia Sofia" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                      />
            <Button x:ConnectionId='10' x:Name="button10" Content="Concert Hall" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                       />
            <Button x:ConnectionId='11' x:Name="button11" Content="Great Alexander" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                       />
            <Button x:ConnectionId='12' x:Name="button12" Content="Byzantine Culture" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                       />
            <Button x:ConnectionId='13' x:Name="button13" Content="Vergina" Height="80" Width="320" FontSize="30" FontFamily="Comic Sans MS"                       />
        </ListView>
        <Image x:Name="image" HorizontalAlignment="Left" Height="192"  VerticalAlignment="Top" Width="371" Grid.RowSpan="3" Grid.Column="3" Grid.Row="1"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="489"  Grid.Row="4" VerticalAlignment="Top" Width="895" Grid.Column="2" Grid.ColumnSpan="2">
            <TextBlock x:Name="citysTextBlock" HorizontalAlignment="Left" Height="1161" TextWrapping="Wrap" VerticalAlignment="Top" Width="885" LineHeight="7" FontSize="20" FontFamily="Comic Sans MS" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
                <TextBlock.RenderTransform>
                    <CompositeTransform SkewY="-0.69" TranslateY="-4.363"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </ListView>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="listBox">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>-24,65,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="image">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>10,2,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Grid.Row)" Storyboard.TargetName="image">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Int32>1</x:Int32>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Grid.RowSpan)" Storyboard.TargetName="image">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Int32>3</x:Int32>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

